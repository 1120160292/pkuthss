#!/usr/bin/make -f
# vim:ts=4:sw=4
#
# Copyright (c) 2011-2014 Casper Ti. Vector
# Public domain.

CP = cp -rL
MV = mv -f
MD = mkdir -p
RD = rm -rf
ZIP = zip -rT
MAKE = make
SELF = utils/dist
PERM = find . -type d -exec chmod 755 '{}' +; \
	find . -type f -exec chmod 644 '{}' +

dist:
	$(SELF) distclean
	$(SELF) dist-ctan
	$(SELF) clean

tex-dist: tex/
	$(CP) tex/ $@
	cd $@ && $(MAKE) && rm -f Makefile

doc-dist: doc/
	# Make the directory.
	$(MD) $@/
	# Example pdf.
	$(MAKE) toutf8
	cd doc/example/ && $(MAKE) && $(MAKE) clean
	$(MV) doc/example/$(EXAMPLE).pdf $@/example.pdf
	# Example src.
	$(CP) doc/example/ $@/example-utf8
	$(MAKE) togbk
	$(CP) doc/example/ $@/example-gbk
	$(MAKE) toutf8
	# Readme src and pdf.
	cd doc/readme/ && $(MAKE) && $(MAKE) clean
	$(MV) doc/readme/$(TITLE).pdf $@/readme.pdf
	$(CP) doc/readme/ $@/readme-src

dir-tds: tex-dist doc-dist
	$(MD) $@/tex/latex/ $@/doc/latex/
	$(CP) tex-dist/ $@/tex/latex/$(TITLE)
	$(CP) doc-dist/ $@/doc/latex/$(TITLE)
	cd $@ && $(PERM)

dist-tds: $(TITLE)-$(VERSION).tds.zip
$(TITLE)-$(VERSION).tds.zip: dir-tds
	cd $< && $(ZIP) ../$@ tex/ doc/

dir-ctan: README tex-dist doc-dist $(TITLE)-$(VERSION).tds.zip
	$(MD) $@/$(TITLE)/
	$(CP) README $@/$(TITLE)/
	$(CP) tex-dist/ $@/$(TITLE)/tex
	$(CP) doc-dist/ $@/$(TITLE)/doc
	$(MV) $(TITLE)-$(VERSION).tds.zip $@/
	cd $@ && $(PERM)

dist-ctan: $(TITLE)-$(VERSION).zip
$(TITLE)-$(VERSION).zip: dir-ctan
	cd $< && $(ZIP) ../$@ $(TITLE)/ $(TITLE)-$(VERSION).tds.zip

clean:
	cd doc/readme/ && $(MAKE) distclean
	cd doc/example/ && $(MAKE) distclean
	$(RD) dir-ctan/ dir-tds/ tex-dist/ doc-dist/

distclean:
	$(SELF) clean
	$(RD) $(TITLE)-$(VERSION).tds.zip $(TITLE)-$(VERSION).zip

